{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "~app": ["./src/app"],
      "~api": ["./src/entities/api"],
      "~config": ["src/entities/config"],
      "~entities": ["./src/entities"],
      "~features": ["./src/features"],
      "~helpers": ["src/shared/helpers"],
      "~utils": ["src/shared/utils"],
      "~types": ["./src/entities/types"],
      "~ui": ["./src/shared/ui"],
      "~widgets": ["./src/widgets"]
    },
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "jsx": "react",
    "baseUrl": ".",
    "composite": true,
    "strict": true,
    "target": "es2015",
    "lib": ["es2022", "es2020", "es2019", "es2016", "dom"],

    "esModuleInterop": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
